[Mode]
debug = True

[Glidein]
address = http://glidein-simprod.icecube.wisc.edu:11001/jsonrpc
site = Comet

[Cluster]
user = heaths
os = RHEL6
scheduler = slurm
submit_command = sbatch
walltime_hrs = 48
max_idle_jobs = 10
limit_per_submit = 5
max_total_jobs = 50
partitions = p100-shared

[p100-shared]
gpu_only = True
whole_node = True
whole_node_memory = 25000
whole_node_cpus = 6
whole_node_disk = 400000
whole_node_gpus = 1
group_jobs = False
partition = p100-shared
submit_command = sbatch --gres=gpu:p100:1
running_cmd = squeue -u $USER -t RUNNING -p gpu-shared -h | wc -l
idle_cmd = squeue -u $USER -t PENDING -p gpu-shared -h | wc -l

[k80-shared]
gpu_only = True
whole_node = True
whole_node_memory = 25000
whole_node_cpus = 6
whole_node_disk = 400000
whole_node_gpus = 1
group_jobs = False
partition = k80-shared
submit_command = sbatch --gres=gpu:k80:1
running_cmd = squeue -u $USER -t RUNNING -p gpu-shared -h | wc -l 
idle_cmd = squeue -u $USER -t PENDING -p gpu-shared -h | wc -l

[SubmitFile]
filename = submit.pbs
local_dir = /scratch/$USER/$SLURM_JOB_ID
custom_header = #SBATCH -A wis142

[CustomEnv]
CACHE_DIR = /oasis/scratch/comet/heaths/temp_project/cache

[StartdLogging]
send_startd_logs = True
url = s3.amazonaws.com
bucket = pyglidein-logging-comet

[StardChecks]
enable_startd_checks = True
